{
  "version": 2,
  "builds": [
    {
      "src": "frontend/public/**",
      "use": "@vercel/static"
    },
    {
      "src": "frontend/templates/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/static/(.*)",
      "destination": "frontend/public/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://mentalhealthbuddy.onrender.com/api/$1"
    },
    {
      "source": "/resources",
      "destination": "frontend/templates/resources.html"
    },
    {
      "source": "/(.*)",
      "destination": "frontend/templates/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html"
        }
      ]
    }
  ]
}